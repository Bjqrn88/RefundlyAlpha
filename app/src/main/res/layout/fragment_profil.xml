<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.macbear.refundlyalpha.ProfilFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilAddressText"
        android:text="Hjemme addresse:"
        android:layout_above="@+id/profilAddressRoad"
        android:layout_alignStart="@+id/profilAddressRoad" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/profilAddressRoad"
        android:hint="Enter Adress"
        android:layout_above="@+id/profilAddressPostalcode"
        android:layout_alignStart="@+id/profilAddressPostalcode" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/profilAddressPostalcode"
        android:hint="Enter Post Code"
        android:layout_above="@+id/profilAddressCity"
        android:layout_alignEnd="@+id/profilSaveButton" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/profilAddressCity"
        android:hint="Enter Phone number"
        android:layout_above="@+id/profilCancelButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/profilCancelButton"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/profilAddressCity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/profilSaveButton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/profilAddressCity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/profilUserName"
        android:layout_above="@+id/profilAddressText"
        android:layout_alignStart="@+id/profilAddressText"
        android:hint="Enter Username" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/profilUsernameText"
        android:layout_above="@+id/profilUserName"
        android:layout_alignStart="@+id/profilUserName" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/refundlylogo"
        android:scaleType="fitCenter"
        android:layout_above="@+id/profilUsernameText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp" />

</RelativeLayout>
